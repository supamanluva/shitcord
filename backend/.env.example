# Shitcord Backend Environment
# Copy this to .env and fill in your values

# Server
PORT=8080
HOST=0.0.0.0

# Database driver: "sqlite" or "postgres"
DB_DRIVER=sqlite
DB_PATH=./shitcord.db

# PostgreSQL settings (only used when DB_DRIVER=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=shitcord
DB_PASSWORD=CHANGE_ME
DB_NAME=shitcord
DB_SSLMODE=disable

# JWT
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
JWT_EXPIRY_HOURS=72

# Encryption
# Server-side key for encrypting data at rest (32 bytes hex-encoded)
ENCRYPTION_KEY=CHANGE_ME_64_HEX_CHARS_HERE_00000000000000000000000000000000

# TURN/STUN servers for WebRTC
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# File uploads
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
